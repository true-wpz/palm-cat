/* components/newsModal/newsModal.wxss */
.wx-mask {
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.4);
}

.wx-modal-catlogo {
    position: absolute;
    top: -100rpx;
    right: 10rpx;
    height: 110rpx;

}

.wx-modal {
    position: fixed;
    z-index: 5000;
    width: 600rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #FFFFFF;
    border-radius: 15rpx;
    overflow: visible;

    padding: 20rpx 35rpx 0 35rpx;
}

.wx-modal-row{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom: 8rpx;
}


.wx-modal-title {
    /* padding: 15px 15px 5px; */
    margin: 0 0 10rpx 5rpx;
    text-align: left;
    font-size: 33rpx;
    font-weight: 600;

}

.wx-modal-content {
    /* padding: 15px 15px 5px;
    min-height: 40px;
    line-height: 1.3;
    */
    white-space: pre-wrap;

    font-size: 28rpx;
    font-weight: 400;

    margin-bottom: 30rpx;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;

    color: var(--color-gray-max);
}

.wx-modal-image {
    margin: 10rpx;
    width: 540rpx;
}

.wx-modal-scroll {
    width: auto;
    padding: 15rpx 5rpx;
    height: 600rpx;
    background-color: #FFFFFF;
}

.wx-modal-class {
    width: 80rpx;
    height: 38rpx;
    border-radius: 15rpx;
    margin: 0 12rpx 0 0;
    
    font-size: 24rpx;
    font-weight: 500;
    text-align: center;
    line-height: 38rpx;

    background-color: var(--color-primary-light);
    color: var(--color-primary);
}


.wx-modal-time {
    font-size: 26rpx;
    color: var(--color-gray-dark);
    flex-grow: 1;
    text-align: right;
    white-space: nowrap;  
    text-overflow:ellipsis; 
    overflow: hidden;
}

.wx-modal-footer {
    display: flex;
    align-items: center;
    position: relative;
    line-height: 90rpx;
    font-size: 32rpx;
}

.wx-modal-footer::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #D5D5D6;
    color: #D5D5D6;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}

.wx-modal-btn {
    display: block;
    flex: 1;
    position: relative;
    text-align: center;
}

.wx-modal-footer .wx-modal-btn:nth-of-type(1) {
    color: var(--color-gray-max);
}

.wx-modal-footer .wx-modal-btn:nth-of-type(2) {
    color: var(--color-primary);
}

.wx-modal-footer .wx-modal-btn:nth-of-type(2):after {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    width: 1px;
    bottom: 0;
    border-left: 1px solid #D5D5D6;
    color: #D5D5D6;
    transform-origin: 0 0;
    transform: scaleX(0.5);
}