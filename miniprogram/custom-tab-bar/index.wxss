.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 96rpx;
  background: white;
  display: flex;
  padding-bottom: max(16rpx, env(safe-area-inset-bottom));
}

.tab-bar.hidden {
  opacity: 0;
}

.tab-bar-border {
  background-color: white;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1rpx;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  height: 100rpx;
  border-top: white;
}

.tab-bar-img {
  width: 54rpx;
  height: 54rpx;
}

.tab-bar-title {
  font-size: 20rpx;
}
